<% layout('/layouts/boilerplate') -%>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Edit your Listing</h3>
        <form  action="/listings/<%=listing._id%>?_method=PUT"   method="POST" novalidate class="needs-validation">
            <div class="mb-2">
                <label for="title">Title : </label>
                <br>
                <input type="text" 
                ame="listing[title]" 
                value="<%=listing.title%>"
                class="form-control" required>
                <div class="valid-feedback">Title should be valid!!!</div>
                <div class="invalid-feedback">please enter a valid title</div>
            </div>
            <div class="mb-2">
                <label for="description">Description :</label>
                <br>
                <textarea  name="listing[description]" 
                class="form-control" required>
                <%=listing.description%>
            </textarea><div class="valid-feedback">short description!!!</div>
            <div class="invalid-feedback">please enter a short description!!!</div>

            </div>
            <div class="mb-2">
                <label for="image">image url :</label>
                <input type="text" 
                name="listing[image][url]" 
                value="<%=listing.image.url%>"
                placeholder="Enter URL"
                class="form-control" required>
                <div class="valid-feedback">image link should be valid!!!</div>
                <div class="invalid-feedback">please enter a valid image link</div> 
                <label for="filename">Filename :</label>
                <input type="text" 
                name="listing[image][filename]" 
                value="<%=listing.image.filename %>"
                placeholder="Enter Filename"
                class="form-control" required> 
                <div class="valid-feedback">filename should be valid!!!</div> 
                <div class="invalid-feedback">please enter a valid filename</div>
            </div>
            <div class="row ">
                <div class="mb-2 col-md-4">
                    <label for="price">Price :</label>
                    <br>
                    <input 
                    name="listing[price]" 
                    value="<%=listing.price%>"
                    class="form-control"  required>
                    <div class="valid-feedback">Price should be valid!!!</div>
                    <div class="invalid-feedback">please enter a valid price</div>
                </div>
                <div class="mb-2 col-md-8"> 
                    <label for="country">Country :</label>
                    <br>
                    <input type="text" 
                    name="listing[country]" 
                    value="<%=listing.country%>"
                    class="form-control"  required>
                    <div class="valid-feedback">country name should be valid!!!</div>
                    <div class="invalid-feedback">please enter a valid country name</div>
                </div>
            </div>
            <div class="mb-2"><label for="location">Location :</label>
                <br>
                <input type="text" 
                name="listing[city]" 
                value="<%=listing.city%>" 
                class="form-control" required>
                <div class="valid-feedback">location should be valid!!!</div>
                <div class="invalid-feedback">please enter a valid location</div>
            </div>
            <button class="btn btn-dark add-btn mt-3 mb-3" >Submit</button>  
        </form> 
    </div>
</div>